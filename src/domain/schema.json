{
  "$schema": "http://json-schema.org/schema",
  "$id": "SchematicsMZDomain",
  "title": "MZ Group Domain Options Schema",
  "type": "object",
  "description": "Create an application domain for MZGroup application",
  "properties": {
    "name":{
      "type":"string",
      "description": "The name of the domain.",
      "$default":{
        "$source":"argv",
        "index":0
      },
      "x-prompt":"What name would you like to use for the domain?"
    },
    "application":{
      "type":"string",
      "description": "The name of the application",
      "$default":{
        "$source":"argv",
        "index":1
      },
      "x-prompt":"What name of application container?"
    }
  }
}